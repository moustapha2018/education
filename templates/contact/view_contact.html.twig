{% extends 'base.html.twig' %}
{% block title %}La contact{% endblock %}
{% block body %}

    <div class="container" >
        <div class="mt-3">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} mt-10">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        <h6 class="my-3">Detail du contact</h6>

        <div class="row">
            <div class="col-md-12">
                <div class="card bg-light mb-3">
                    <div class="card-header text-center">
                      <strong>{{contact.title}} /</strong> cr√©e le <small>{{ contact.createdAt| date('d/m/Y ' ) }}</small><br>
                        {{ contact.email }}
                        {% if contact.phone != 'pas de contact' %}
                            <span> / </span>0{{ contact.phone }}
                        {% endif %}
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">
                            Description
                        </h4>
                        <p class="card-text">
                            {{ contact.description}}
                        </p>
                        <a href="{{ path('all_messages') }}" class="btn btn-secondary">Retour aux contacts</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}