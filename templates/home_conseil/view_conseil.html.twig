{% extends 'base.html.twig' %}
{% block title %}La recette{% endblock %}
{% block body %}

    <div class="container" >
        <div class="mt-3">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} mt-10">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        <h6 class="my-3">Details de la recette</h6>

        <div class="row">
            <div class="col-md-12">
                <div class="card bg-light mb-3">
                    <div class="card-header text-center">
                        <strong> {{ conseil.Ccategorie.name }}</strong><br>
                        <small>{{ conseil.createdAt| date('d/m/Y ' ) }}</small>
                    </div>
                    <img class="mx-auto d-block" src="{{ asset('img/conseil1.png' ) }}" alt="image"
                         style="height: 250px; width:100%; display:block">
                    <div class="card-body">
                        <h4 class="card-title">
                            {{ conseil.name }}
                        </h4>
                        <p class="card-text">
                            {{ conseil.description}}
                        </p>
                        <a href="{{ path('home_conseil') }}" class="btn btn-secondary">Retour aux conseils</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}