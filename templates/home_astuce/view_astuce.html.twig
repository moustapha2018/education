{% extends 'base.html.twig' %}
{% block title %}La astuce{% endblock %}
{% block body %}

    <div class="container" >
        <div class="mt-3">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} mt-10">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        <h6 class="my-3">Detail de l'astuce</h6>

        <div class="row">
            <div class="col-md-12">
                <div class="card bg-light mb-3">
                    <div class="card-header text-center">
                        <strong> {{ astuce.type }}</strong><br>
                        <small>{{ astuce.createdAt| date('d/m/Y ' ) }}</small>
                    </div>
                    <img class="mx-auto d-block" src="{{ asset('img/astuce1.png' ) }}" alt="image"
                         style="height: 350px; width:100%; display:block">
                    <div class="card-body">
                        <h4 class="card-title">
                            {{ astuce.name }}
                        </h4>
                        <p class="card-text">
                            {{ astuce.description}}
                        </p>
                        <a href="{{ path('home_astuce') }}" class="btn btn-secondary">Retour aux astuces</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}